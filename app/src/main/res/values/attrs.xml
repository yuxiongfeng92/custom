<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomCircle">
        <attr name="radius" format="dimension" />
        <attr name="progress" format="integer" />
        <attr name="bg" format="reference" />
        <attr name="progressColor" format="color" />
        <attr name="circleColor" format="color" />
        <attr name="stroke_width" format="float" />
    </declare-styleable>

    <declare-styleable name="NumberProgressBar">
        <attr name="progress_current" format="integer" />
        <attr name="progress_max" format="integer" />

        <attr name="progress_reach_color" format="color" />
        <attr name="progress_unreach_color" format="color" />

        <attr name="progress_reach_height" format="dimension" />
        <attr name="progress_unreach_height" format="dimension" />

        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_visibility" format="enum">
            <enum name="Visible" value="0" />
            <enum name="UnVisible" value="1" />
            <enum name="Gone" value="2" />
        </attr>
    </declare-styleable>

</resources>